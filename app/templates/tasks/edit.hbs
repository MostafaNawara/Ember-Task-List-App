<form>
  <div class="form-group">
    <label>Title</label>
    {{input type="text" class="form-control" placeholder="Add task" value=model.title}}
  </div>

  <div class="form-group">
    <label>Due Data</label>
    {{input type="date" class="form-control" value=model.date}}
  </div>

  <div class="form-group">
    <label>Description</label>
    {{textarea type="text" class="form-control" placeholder="Add task description..." value=model.description}}
  </div>

  <button {{action 'editTask' model.id}} type="submit" class="btn btn-primary">Edit Task</button>
</form>
