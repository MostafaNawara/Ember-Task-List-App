<form>
  <div class="form-group">
    <label>Title</label>
    {{input type="text" class="form-control" placeholder="Add task" value=title}}
  </div>

  <div class="form-group">
    <label>Due Data</label>
    {{input type="date" class="form-control" value=date}}
  </div>

  <div class="form-group">
    <label>Description</label>
    {{textarea type="text" class="form-control" placeholder="Add task description..." value=description}}
  </div>

  <button {{action 'addTask'}} type="submit" class="btn btn-primary">Add Task</button>
</form>
